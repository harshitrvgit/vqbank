<% if (success && success.length) { %>
    <div class="alert alert-success alert-dismissible fade show mb-0 zero-radius" role="alert">
        <strong><%= success %> </strong>.
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %> 

<% if (error && error.length) { %>
    <div class="alert alert-danger alert-dismissible fade show mb-0 zero-radius" role="alert">
        <strong><%= error %></strong>.
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>