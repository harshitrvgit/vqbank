<% layout('layouts/boilerplate') %>

    <div class="center-item">
        <div>
            <h1>Login</h1>
        </div>
        <div>
            <form action="/api/v1/login" method="post">
                <div class="mb-3">
                    <label for="email" class="form-label">Email address</label>
                    <input type="email" name="email" pattern="[^@ \t\r\n]+@[^@ \t\r\n]+\.[^@ \t\r\n]+"
                        class="form-control" id="email" aria-describedby="emailHelp" required>
                    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                </div>
                <div class="mb-1">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="password" class="form-control" id="password" required>
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="show-password">
                    <label class="form-check-label" for="show-password">Show Password</label>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <div class="google_btn_container">
                <a href="/login">
                    <div class="google__btn">
                        <div>Login with Google</div>
                        <div class="google__svg">
                            <img src="/assets/svg/google_logo.svg" />
                        </div>
                    </div>
                </a>
            </div>
            <p>Need a account? <a class="mt-3" href="/api/v1/register"> Sign Up</a></p>
        </div>
    </div>

    <script src="/js/toggleShowPassword.js"></script>